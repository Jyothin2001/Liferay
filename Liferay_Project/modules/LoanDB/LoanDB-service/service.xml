<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="LoanDB">
	<namespace>B</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
	
	
	 <entity name="CustomerTable" local-service="true" remote-service="false" >
	 
        <column name="customerId" type="long" primary="true"  id-type="increment"/>
        <column name="name" type="String" />
        <column name="email" type="String" />
        <column name="phone" type="String" />
         <column name="dob" type="Date" />
        <column name="aadharNumber" type="String" />
        <column name="panNumber" type="String" />
        <column name="address" type="String" />
        
        <!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

          <!-- Order -->
        
		<order by="asc">
			<order-column name="name" />
		</order>
        
    </entity>
	
	<entity local-service="true" name="LoanTable" remote-service="true" uuid="true">

	    <column name="LoanId" primary="true" type="long" id-type="increment"/>
			<!-- PK fields -->
        <column name="customerId" type="long" />
        <column name="loanType" type="String" />
        <column name="amount" type="double" />
        <column name="status" type="String" />
        <column name="applicationDate" type="Date" />
        <column name="interestRate" type="double" />
        <column name="tenure" type="int" />
        <column name="remarks" type="String" />
        

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

          <!-- Order -->
        
		<order by="asc">
			<order-column name="loanType" />
		</order>

		<!-- Finder methods -->

		<finder name="CustomerId" return-type="Collection">
			<finder-column name="customerId" />
		</finder>

        <reference entity="CustomerTable" package-path="LoanDB"/>
        
        
		
	</entity>
</service-builder>